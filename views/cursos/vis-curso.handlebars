<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Conteúdo da página cursos</h2>
            </div>

            <div class="p-2">
                <span class="d-none d-md-block">
                    
                    <a href="/cursos/add-curso" class="btn btn-outline-primary btn-sm">Adicionar curso</a>
                     <a href="/cursos/edit-cursos-img" class="btn btn-outline-warning btn-sm">Editar Imagem</a>
                    
                </span>
                
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        
                        <a class="dropdown-item" href="/edit-curso-img">Editar Img 1</a>
                    </div>

                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        {{#each cursos.docs}}
        <dl class="row">
            
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{_id}}</dd>

            <dt class="col-sm-3">Titulo </dt>
            <dd class="col-sm-9">{{curso}}</dd>

            <dt class="col-sm-3">Subtitulo</dt>
            <dd class="col-sm-9">{{periodo}} </dd>

            <dt class="col-sm-3">Titulo do Botão</dt>
            <dd class="col-sm-9">{{desccurso}}</dd>

            <dt class="col-sm-3">url Botão</dt>
            <dd class="col-sm-9">{{urlcurso}}</dd>
          

            <dt class="col-sm-3">Imagem </dt>
            <dd class="col-sm-9"><img class="img-fluid" src="/images/cursos/{{imgcurso}}"></dd>
            
        </dl>
        <a href="/cursos/edit-cursos/{{_id}}" class="btn btn-warning">Editar</a>
        <a href="/cursos/edit-cursos-img/{{_id}}" class="btn btn-warning">Editar Img</a>
        <a href="/cursos/delete-cursos/{{_id}}" class="btn btn-danger">Excluir</a>
        
       <hr>
        {{/each}}
    </div>
</div>