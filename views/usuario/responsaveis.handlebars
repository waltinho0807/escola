<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Lista de Responsaveis</h2>
            </div>

            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/responsaveis/cadastrar-responsaveis" class="btn btn-outline-primary btn-sm">Cadastrar
                        Res.</a>
                </span>

                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">

                        <a class="dropdown-item" href="/edit-blog">Editar Img 1</a>
                    </div>

                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>

        {{#each user.docs}}
        <dl class="row">

            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{_id}}</dd>

            <dt class="col-sm-3">Nome </dt>
            <dd class="col-sm-9">{{nome}}</dd>

            <dt class="col-sm-3">E-mail</dt>
            <dd class="col-sm-9">{{email}} </dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">{{cpf}}</dd>

            <dt class="col-sm-3">Registro</dt>
            <dd class="col-sm-9">{{rr}}</dd>



            <dt class="col-sm-3">Foto Capa </dt>
            <dd class="col-sm-9"><img class="rounded-circle" src="/images/responsavel/{{foto_perfil}}" width="160"
                    height="160">
            </dd>


        </dl>
        <div class="p-2">
            <span class="d-none d-md-block">
                <a href="/responsaveis/img-responsaveis" class="btn btn-outline-primary btn-sm">Foto Perfil</a>
                <a href="/responsaveis/add-boleto" class="btn btn-outline-primary btn-sm">Boletos</a>
            </span>

        </div>
        <hr>
        {{/each}}


        <a href="/biblioteca" class="btn btn-warning">Voltar</a>


        <hr>

    </div>
</div>