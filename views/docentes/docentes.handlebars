<section class="hero-wrap hero-wrap-2" style="background-image: url('images/docentes/img-page/docentes_img.jpg');">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<h1 class="mb-2 bread">Professores Qualificados</h1>
				<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i
								class="ion-ios-arrow-forward"></i></a></span> <span>Professores <i
							class="ion-ios-arrow-forward"></i></span></p>
			</div>
		</div>
	</div>
</section>

<section class="ftco-section ftco-no-pb">
	<div class="container">
		<div class="row">
			{{#each docentes.docs}}
			<div class="col-md-6 col-lg-3 ftco-animate">
				<div class="staff">
					<div class="img-wrap d-flex align-items-stretch">
						<div class="img align-self-stretch"
							style="background-image: url(images/docentes/{{imagem}});"></div>
					</div>
					<div class="text pt-3 text-center">
						<h3>{{nome}}</h3>
						<span class="position mb-2">{{aula}}</span>
						<div class="faded">
							<p>{{desc}}</p>
							<ul class="ftco-social text-center">
								<li class="ftco-animate"><a href="{{tweeter}}"><span
											class="icon-twitter"></span></a></li>
								<li class="ftco-animate"><a href="{{facebook}}" target="blank"><span
											class="icon-facebook"></span></a></li>
								<li class="ftco-animate"><a href="{{google}}"><span
											class="icon-google-plus"></span></a></li>
								<li class="ftco-animate"><a href="{{instagram}}"><span
											class="icon-instagram"></span></a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>

		 <div class="row no-gutters my-5">
          <div class="col text-center">
            <div class="block-27">
              <ul>
                {{#if docentes.hasPrevPage}}
              <li class=""><a href="/docentes?page={{docentes.prevPage}}"><i class="ion-ios-arrow-back"></i></a></li>
              <li><a href="#">{{docentes.prevPage}}</a></li>
              {{else}}
              <li class="disable"><a href="#"><i class="ion-ios-arrow-back"></i></a></li>
              {{/if}}

              <li class="active"><span>{{docentes.page}}</span></li>

              {{#if docentes.hasNextPage}}
              <li class=""><a href="/docentes?page={{docentes.nextPage}}"><i class="ion-ios-arrow-forward"></i></a></li>

              {{else}}
              <li class="disable"><a href="#"><i class="ion-ios-arrow-forward"></i></a></li>
              {{/if}}
              </ul>
            </div>
          </div>
        </div>

	</div>
</section>