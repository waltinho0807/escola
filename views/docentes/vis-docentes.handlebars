<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Professores</h2>
            </div>

            <div class="p-2">
                <span class="d-none d-md-block">
                    
                    <a href="/docentes/add-docente" class="btn btn-outline-primary btn-sm">Adicionar docente</a>
                     <a href="/docentes/edit-docentes-img" class="btn btn-outline-warning btn-sm">Editar Imagem</a>
                    
                </span>
                
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        
                        <a class="dropdown-item" href="/edit-docentes-img">Editar Img 1</a>
                    </div>

                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        {{#each docentes.docs}}
        <dl class="row">
            
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{_id}}</dd>

            <dt class="col-sm-3">Nome </dt>
            <dd class="col-sm-9">{{nome}}</dd>

            <dt class="col-sm-3">Aula</dt>
            <dd class="col-sm-9">{{aula}} </dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">{{desc}}</dd>

            <dt class="col-sm-3">Facebook</dt>
            <dd class="col-sm-9">{{facebook}}</dd>

            <dt class="col-sm-3">Instagram</dt>
            <dd class="col-sm-9">{{instagram}}</dd>

            <dt class="col-sm-3">Tweeter</dt>
            <dd class="col-sm-9">{{teweeter}}</dd>

            <dt class="col-sm-3">G+</dt>
            <dd class="col-sm-9">{{google}}</dd>

            <dt class="col-sm-3">Imagem </dt>
            <dd class="col-sm-9"><img class="img-fluid" src="/images/docentes/{{imagem}}"></dd>
            
        </dl>
        <a href="/docentes/edit-docentes/{{_id}}" class="btn btn-warning">Editar</a>
        <!--<a href="/docentes/edit-docentes-img/{{_id}}" class="btn btn-warning">Editar img</a>-->
        <a href="/docentes/delete-docentes/{{_id}}" class="btn btn-danger">Excluir</a>
       <hr>
        {{/each}}
        
    </div>
    
</div>