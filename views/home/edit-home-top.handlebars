<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar conteúdo do serviço na página inicial</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/vis-home-top" class="btn btn-outline-primary btn-sm">Visualizar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/vis-home-top">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        
        <form method="POST" action="/update-home-top">
            <input name="_id" type="hidden" value="{{hometopo._id}}">
            
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Titulo 1</label>
                    <input name="tituloum" type="text" class="form-control" id="tituloservum" placeholder="Titulo do ícone um" value="{{hometopo.tituloum}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> Titulo botão 1</label>
                    <input name="titulobtnum" type="text" class="form-control" id="iconeservum" placeholder="Seletor do ícone um" value="{{hometopo.titulobtnum}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> Url botão 1</label>
                    <input name="urlbtnum" type="text" class="form-control" id="iconeservum" placeholder="Seletor do ícone um" value="{{hometopo.urlbtnum}}" required>
                </div>
            </div>

             <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Titulo 2</label>
                    <input name="titulodois" type="text" class="form-control" id="tituloservum" placeholder="Titulo do ícone um" value="{{hometopo.titulodois}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> Titulo botão 2</label>
                    <input name="titulobtndois" type="text" class="form-control" id="iconeservum" placeholder="Seletor do ícone um" value="{{hometopo.titulobtndois}}" required>
                </div>
                <div class="form-group col-md-4">
                    <label><span class="text-danger">*</span> Url botão 2</label>
                    <input name="urlbtndois" type="text" class="form-control" id="iconeservum" placeholder="Seletor do ícone um" value="{{hometopo.urlbtndois}}" required>
                </div>
            </div>

             <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Titulo 1</label>
                    <input name="subtituloum" type="text" class="form-control" id="titulosrvdois" placeholder="Titulo do ícone dois" value="{{hometopo.subtituloum}}" required>
                </div>
               
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 1</label>
                <textarea name="descum" class="form-control" id="descservdois" placeholder="Descrição do ícone dois" rows="3">{{hometopo.descum}}</textarea>
            </div>

            

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Titulo 2</label>
                    <input name="subtitulodois" type="text" class="form-control" id="titulosrvdois" placeholder="Titulo do ícone dois" value="{{hometopo.subtitulodois}}" required>
                </div>
               
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 2</label>
                <textarea name="descdois" class="form-control" id="descservdois" placeholder="Descrição do ícone dois" rows="3">{{hometopo.descdois}}</textarea>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Titulo 3</label>
                    <input name="subtitulotres" type="text" class="form-control" id="tituloservtres" placeholder="Titulo do ícone tres" value="{{hometopo.subtitulotres}}" required>
                </div>
                
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 3</label>
                <textarea name="desctres" class="form-control" id="descservtres" placeholder="Descrição do ícone tres" rows="3">{{hometopo.desctres}}</textarea>
            </div>

             <div class="form-row">
                <div class="form-group col-md-8">
                    <label><span class="text-danger">*</span> Titulo 4</label>
                    <input name="subtituloquatro" type="text" class="form-control" id="titulosrvdois" placeholder="Titulo do ícone dois" value="{{hometopo.subtituloquatro}}" required>
                </div>
               
            </div>

            <div class="form-group">
                <label><span class="text-danger">*</span>Descrição 4</label>
                <textarea name="descquatro" class="form-control" id="descservdois" placeholder="Descrição do ícone dois" rows="3">{{hometopo.descquatro}}</textarea>
            </div>

            <p>
                <span class="text-danger">* </span>Campo obrigatório
            </p>
            <button type="submit" class="btn btn-warning">Salvar</button>
        </form>
    </div>
</div>