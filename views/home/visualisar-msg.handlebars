<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Mensagens </h2>
            </div>

            <div class="p-2">
                <span class="d-none d-md-block">
                    
                </span>
                
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        
                    </div>

                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        {{#each homemsg.docs}}
        <dl class="row">

            
            <dd class="col-sm-9"><b>Nome:</b>  {{nome}} {{sobrenome}}</dd>
            <dd class="col-sm-9"><b>Serie:</b>  {{serie}}</dd>
            <dd class="col-sm-9"><b>Telefone:</b>  {{telefone}}</dd>
            <dd class="col-sm-9"><b>Mensagem:</b>  {{mensagem}}</dd>
            <dd class="col-sm-9"><b>Data:</b>  {{created}}</dd>

        </dl>
        <a href="/delete-msg/{{_id}}" class="btn btn-danger">Excluir</a>
        <hr>
        {{/each}}
    </div>
    <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if homemsg.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/visualisar-msg" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/visualisar-msg?page={{homemsg.prevPage}}">{{homemsg.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="#">{{homemsg.page}}</a>
                    </li>

                    {{#if homemsg.hasNextPage}}
                    <li class="page-item"><a class="page-link"
                            href="/visualisar-msg?page={{homemsg.nextPage}}">{{homemsg.nextPage}}</a></li>
                    <li class="page-item">
                        <a class="page-link" href="/visualisar-msg?page={{homemsg.totalPages}}">Última</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}


                </ul>
            </nav>

</div>