<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Conteúdos do blog</h2>
            </div>

            <div class="p-2">
                <span class="d-none d-md-block">
                       <a href="/blog/add-post" class="btn btn-outline-primary btn-sm">Adicionar post</a> 
                        <a href="/blog/edit-page-img" class="btn btn-outline-warning btn-sm">Editar Img blog</a>
                        <a href="/blog/edit-vis-img" class="btn btn-outline-warning btn-sm">Editar Img vis blog</a>
                </span>
                
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        
                        <a class="dropdown-item" href="/edit-blog">Editar Img 1</a>
                    </div>

                </div>
            </div>
        </div>
        {{>_msg}}
        <hr>
        {{#each blog.docs}}
        <dl class="row">
            
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{_id}}</dd>

            <dt class="col-sm-3">Titulo </dt>
            <dd class="col-sm-9">{{titulo}}</dd>

            <dt class="col-sm-3">Subtitulo</dt>
            <dd class="col-sm-9">{{subtitulo}} </dd>

            <dt class="col-sm-3">Descrição topo</dt>
            <dd class="col-sm-9">{{desctopo}}</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">{{descricao}}</dd>
          
            <dt class="col-sm-3">Categoria</dt>
            <dd class="col-sm-9">{{descricao}}</dd>

             <dt class="col-sm-3">Criado em</dt>
            <dd class="col-sm-9">{{created}}</dd>

            <dt class="col-sm-3">Imagem </dt>
            <dd class="col-sm-9"><img class="img-fluid" src="/images/blog/{{imagem}}"></dd>
            
        </dl>
        <a href="/blog/edit-blog/{{_id}}" class="btn btn-warning">Editar</a>
        <a href="/blog/add-blog-img/{{_id}}" class="btn btn-warning">Add img 2</a>
        <a href="/blog/delete-blog/{{_id}}" class="btn btn-danger">Excluir</a>
        
       <hr>
        {{/each}}
    </div>

     <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if blog.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/blog/visualisar-blog" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/blog/visualisar-blog?page={{blog.prevPage}}">{{blog.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    <li class="page-item active">
                        <a class="page-link" href="#">{{blog.page}}</a>
                    </li>

                    {{#if blog.hasNextPage}}
                    <li class="page-item"><a class="page-link"
                            href="/blog/visualisar-blog?page={{blog.nextPage}}">{{blog.nextPage}}</a></li>
                    <li class="page-item">
                        <a class="page-link" href="/blog/visualisar-blog?page={{blog.totalPages}}">Última</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}


                </ul>
            </nav>

</div>